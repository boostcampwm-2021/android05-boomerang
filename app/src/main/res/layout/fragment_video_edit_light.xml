<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.videoedit.VideoEditFragment">


        <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
            android:id="@+id/frame_video"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:resize_mode="fixed_height">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:resize_mode="fixed_height" />
        </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

        <com.alphamovie.lib.AlphaMovieView
            android:id="@+id/alphaView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:accuracy="0.05"
            app:alphaColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/frame_video"
            app:layout_constraintTop_toTopOf="@id/frame_video" />

        <TextView
            android:id="@+id/tv_subvideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/frame_video" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>