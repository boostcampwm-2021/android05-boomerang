<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_iv_home_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H, 16:9"
        tools:src="@drawable/ic_setting" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_tv_home_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="@id/item_iv_home_video_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/item_iv_home_video_thumbnail"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_tv_home_video_playtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_home_video_title"
        app:layout_constraintRight_toRightOf="@id/item_iv_home_video_thumbnail"
        tools:text="1:20" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_tv_home_video_day_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_tv_home_video_title"
        app:layout_constraintTop_toBottomOf="@id/item_tv_home_video_title"
        tools:text="1일 전" />


</androidx.constraintlayout.widget.ConstraintLayout>