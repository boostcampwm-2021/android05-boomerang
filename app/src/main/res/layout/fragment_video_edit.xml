<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.videoedit.VideoEditFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/container_video_edit_appbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tb_video_doodle"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorSurface"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="메모 확인"
                app:titleTextAppearance="?attr/textAppearanceTitleLarge">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
            android:id="@+id/frame_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp16"
            app:layout_constraintDimensionRatio="W, 1:1"
            app:layout_constraintTop_toBottomOf="@id/container_video_edit_appbar"
            app:resize_mode="fit">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/black"
                app:resize_mode="fit"
                app:use_controller="false" />
        </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/pcv_video_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:show_timeout="0"
            app:layout_constraintTop_toBottomOf="@id/frame_video"
            app:layout_constraintStart_toStartOf="@id/frame_video"
            app:layout_constraintEnd_toEndOf="@id/frame_video"/>

        <FrameLayout
            android:id="@+id/alphaView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/frame_video"
            app:layout_constraintEnd_toEndOf="@id/frame_video"
            app:layout_constraintStart_toStartOf="@id/frame_video"
            app:layout_constraintTop_toTopOf="@id/frame_video" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/container_et_title"
            style="@style/CustomTextInputLayoutOutLined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:hint="@string/fragment_audio_record_et_title_hint"
            app:layout_constraintTop_toBottomOf="@id/frame_video">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_video_memo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>