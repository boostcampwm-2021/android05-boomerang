<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.kotlinisgood.boomerang.ui.videomemo.VideoMemoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/boomerang_theme_color"
        tools:context=".ui.videomemo.VideoMemoFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/container_appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tb_memo"
                app:title="@{viewModel.mediaMemo.title}"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/boomerang_theme_color">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
            android:background="@color/white"
            android:id="@+id/frame_video"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/dp8"
            app:layout_constraintTop_toBottomOf="@id/container_appbar"
            app:resize_mode="fixed_height">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:resize_mode="fixed_height" />
        </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

        <FrameLayout
            android:id="@+id/alphaView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/frame_video"
            app:layout_constraintTop_toTopOf="@id/frame_video" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>